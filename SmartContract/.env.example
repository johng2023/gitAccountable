# Sepolia Testnet Configuration
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# Or use Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# NOTE: We use Cast wallet for secure key management instead of plain text PRIVATE_KEY
# Your deployer private key is stored encrypted in Cast's keystore (~/.foundry/keystores/)
# Import your key once with: cast wallet import deployer --interactive
# List wallets with: cast wallet list
# Get address with: cast wallet address --account deployer

# Chainlink Configuration (for oracle integration)
CHAINLINK_SUBSCRIPTION_ID=your_subscription_id_here
LINK_TOKEN_SEPOLIA=0x779877A7B0D9E8603169DdbD7836e478b4624789

# GitHub API (for oracle)
GITHUB_API_TOKEN=your_github_personal_access_token_here

# Contract Addresses (will be filled after deployment)
COMMIT_LOCK_ADDRESS=
